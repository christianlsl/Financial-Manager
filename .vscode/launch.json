{
    "version": "0.2.0",
    "configurations": [
        {
            "name": "Python: FastAPI",
            "type": "debugpy",
            "request": "launch",
            "module": "uvicorn",
            "args": [
                "main:app",
                "--host",
                "127.0.0.1",
                "--port",
                "9910",
                "--reload"
            ],
            "cwd": "${workspaceFolder}/backend",
            "env": {
                "PYTHONPATH": "${workspaceFolder}/backend"
            }, // 解决模块导入问题
            "justMyCode": false, // 允许调试第三方库（如 FastAPI/Uvicorn，可选）
            "console": "integratedTerminal"
        }
    ]
}